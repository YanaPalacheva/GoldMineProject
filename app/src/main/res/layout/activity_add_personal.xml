<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.www.goldmineproject.AddPersonalActivity">

    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="1dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/persTotal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/createNewProfile"
            android:layout_alignStart="@+id/createNewProfile"
            android:layout_alignTop="@+id/textView6"
            android:ems="10"
            android:digits="0123456789."
            android:inputType="numberDecimal"
            android:maxLength="7"/>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/spinnerCurrency"
            android:layout_alignLeft="@+id/textView5"
            android:layout_alignStart="@+id/textView5"
            android:text="Валюта:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView"
            android:layout_below="@+id/createNewProfile"
            android:text="Сумма:"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView6"
            android:layout_alignStart="@+id/textView6"
            android:layout_below="@+id/persTotal"
            android:layout_marginTop="73dp"
            android:text="Долг:"
            android:textSize="24sp" />

        <RadioGroup
            android:id="@+id/radioGroup2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/textView5"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView">

            <RadioButton
                android:id="@+id/myPlus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Должны мне" />

            <RadioButton
                android:id="@+id/myMinus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Должен я" />
        </RadioGroup>

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/personalSpinner"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/personalSpinner"
            android:layout_marginBottom="19dp"
            android:text="Создать"
            tools:layout_editor_absoluteX="247dp"
            tools:layout_editor_absoluteY="428dp" />

        <Spinner
            android:id="@+id/personalSpinner"
            android:layout_width="232dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="30dp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="41dp" />

        <Button
            android:id="@+id/createNewProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/personalSpinner"
            android:layout_alignRight="@+id/personalSpinner"
            android:layout_below="@+id/personalSpinner"
            android:text="Создать новый профиль"
            tools:layout_editor_absoluteX="247dp"
            tools:layout_editor_absoluteY="428dp" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/personalSpinner"
            android:layout_marginEnd="25dp"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/personalSpinner"
            android:layout_toStartOf="@+id/personalSpinner"
            android:text="С кем:"
            android:textSize="24sp"
            tools:layout_editor_absoluteX="25dp"
            tools:layout_editor_absoluteY="37dp" />

        <Spinner
            android:id="@+id/spinnerCurrency"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/radioGroup2"
            android:layout_marginTop="29dp"
            android:layout_toEndOf="@+id/textView"
            android:layout_toRightOf="@+id/textView"
            android:paddingTop="5dp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView7"
            android:layout_alignStart="@+id/textView7"
            android:layout_below="@+id/textView7"
            android:layout_marginTop="26dp"
            android:text="Комментарий:"
            android:textSize="24sp" />

        <EditText
            android:id="@+id/persComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView2"
            android:layout_marginTop="12dp"
            android:layout_toLeftOf="@+id/add"
            android:layout_toStartOf="@+id/add"
            android:ems="10"
            android:inputType="textPersonName" />
    </RelativeLayout>

</android.support.constraint.ConstraintLayout>

